#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

VERSION_TYPE=$1

validate() {
  if [[ ! "$VERSION_TYPE" =~ ^(patch|minor|major)$ ]]; then
    echo "==> Error: Version type must be patch, minor, or major"
    echo "    Usage: $0 <patch|minor|major>"
    exit 1
  fi

  if [ "$(git branch --show-current)" != "main" ]; then
    echo "==> Error: Must be on main branch"
    exit 1
  fi

  if ! git diff-index --quiet HEAD --; then
    echo "==> Error: Working directory not clean"
    exit 1
  fi
}

echo "==> Validating release requirements..."
validate

echo "==> Updating main branch..."
git pull origin main

echo "==> Bumping version..."
rye version -b "$VERSION_TYPE"
NEW_VERSION=$(rye version)

echo "==> Updating _version.py..."
sed -i.bak "s/__version__ = \".*\"/__version__ = \"$NEW_VERSION\"/" src/livesync/_version.py
rm src/livesync/_version.py.bak

echo "==> Creating release commit..."
git add pyproject.toml src/livesync/_version.py
git commit -m "chore: bump version to $NEW_VERSION"

echo "==> Pushing release..."
git tag "v$NEW_VERSION"
git push origin main "v$NEW_VERSION"

echo "==> Released v$NEW_VERSION successfully"